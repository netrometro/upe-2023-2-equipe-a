// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//Usuario
model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
}

//Alternativa

//Questao
model Questao {
  id           Int      @id @default(autoincrement()) //falou colocar o UUID
  titulo       String   @unique
  Alternativas String[] //depois tem que trocar esse tipo, pq o novo tipo vai ser Alternativa
  resposta     String
}

//Provas
model Provas {
  titulo String @unique
  data String
  professor User[]
  nome String
  disciplina String
  questoes Questao[]
}