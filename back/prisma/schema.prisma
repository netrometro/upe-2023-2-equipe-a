// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//Usuario
model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  provas Provas[]
}

//Alternativa

//Questao
model Questao {
  id           Int      @id @default(autoincrement()) //falou colocar o UUID
  titulo       String   @unique
  Alternativas String[] //depois tem que trocar esse tipo, pq o novo tipo vai ser Alternativa
  resposta     String
  provas Provas[]
}

//Provas
model Provas {
  id         Int      @id @default(autoincrement())
  titulo     String
  data       String   @unique
  questoes   Questao[]
  professores User     @relation(fields: [professorId], references: [id])
  disciplina String
  professorId Int
}